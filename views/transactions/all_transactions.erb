<div class="title"><a href="/transactions"><img src="/images/squid logo version 1.png" id="squidlogo_title"></a></div>

<h1 class="table_title">ALL TRANSACTIONS</h1>

<div class="table_css">
<table width="100%">
<tr>
  <th>AMOUNT (£)</th>
  <th>MERCHANT</th>
  <th>TAG</th>
  <th></th>
  <th></th>
  <th></th>
</tr>
<% for transaction in @transactions %>
<tr>
  <td><%= transaction.amount %></td>
  <td><%= transaction.merchant.merchant_name %></td>
  <td><%= transaction.tag.tag %></td>
  <td><form action="/transactions/<%= transaction.id %>" method="GET">
    <input type="submit" value="INFO" class="table_buttons" id="info_button"/></form></td>
  <td><form action="/transactions/<%= transaction.id %>/edit" method="GET">
    <input type="submit" value="EDIT" class="table_buttons" id="edit_button"/></form></td>
  <td><form action="/transactions/<%= transaction.id %>/delete_from_all" method="POST">
    <input type="submit" value="DELETE" class="table_buttons" id="delete_button"/></form></td>
</tr>
<% end %>
</table>
</div>

<div class="centre_button"><button class="add_button"><a href="new_transaction">Add Transaction</a></button></div>

<div class="centre_button"><button id="total_spend">Total Spend: £ <%= Transaction.total_spend %></button></div>
